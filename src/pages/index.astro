---
import Layout from "../layouts/Layout.astro";
import Fact from "../components/Fact.tsx";
import Link from "../components/Link.astro";
---

<Layout title="Welcome to Astro.">
	<main class="bg-[#21232B] w-screen h-screen relative">
		<div
			class="w-[35rem] h-fit bg-gray-700 p-4 inset-0 m-auto absolute rounded-xl shadow-black/50 shadow-xl"
		>
			<form
				style="position:relative"
				method="get"
				action="https://duckduckgo.com/"
				target="_top"
				class="p-2 bg-slate-500 flex rounded-full"
			>
				<input
					class="pl-2 outline-none w-full bg-transparent text-white"
					type="text"
					name="q"
					placeholder="Search"
				/>
				<button class="pr-2" type="submit"
					><svg
						xmlns="http://www.w3.org/2000/svg"
						height="1em"
						viewBox="0 0 512 512"
						<path
						d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z"
					></svg></button
				>
			</form>
			<div class="p-2 grid grid-cols-3 grid-rows-4 gap-2">
				<Link name="youtube" link="www.youtube.com" />
				<Link name="discord" link="www.discord.com/app" />
				<Link name="chat gpt" link="chat.openai.com" />
				<Link name="neovim" link="reddit.com/r/neovim" />
				<Link name="unixporn" link="reddit.com/r/unixporn" />
				<Link name="ludwig" link="reddit.com/r/LudwigAhgren" />
				<Link name="github" link="github.com" />
				<Link name="anime" link="9anime.to" />
				<Link name="google drive" link="drive.google.com" />
				<Link name="gmail" link="mail.google.com/mail" />
				<Link name="monkey type" link="monkeytype.com" />
				<Link name="the yard" link="www.youtube.com/@TheYardPodcast" />
			</div>
			<h2 class="text-center font-bold text-slate-300">Fun Fact</h2>
			<div class="w-full h-[2px] bg-slate-300/50 my-2" />
			<Fact client:load />
		</div>
	</main>
</Layout>
